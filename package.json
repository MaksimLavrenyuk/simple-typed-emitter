{
  "name": "simple-typed-emitter",
  "version": "0.0.0",
  "description": "Simple, typed, event emitter",
  "typings": "dist/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "scripts": {
    "start": "NODE_ENV=dev yarn install --check-files && rollup -c -w --watch.skipWrite",
    "build": "NODE_ENV=prod rollup -c",
    "lint": "eslint src/**/* --fix",
    "test": "jest",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaksimLavrenyuk/simple-typed-emitter.git"
  },
  "keywords": [
    "event",
    "emitter",
    "eventemitter",
    "events",
    "emit",
    "on",
    "once",
    "off",
    "listener",
    "subscribe",
    "unsubscribe",
    "pubsub",
    "tiny",
    "addlistener",
    "addeventlistener",
    "dispatch",
    "dispatcher",
    "observer",
    "trigger",
    "await",
    "promise",
    "typescript",
    "ts",
    "typed"
  ],
  "author": "Maksim Lavrenyuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaksimLavrenyuk/simple-typed-emitter/issues"
  },
  "homepage": "https://github.com/MaksimLavrenyuk/simple-typed-emitter#readme",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-eslint": "^8.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-license": "^2.6.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.5",
    "husky": "^7.0.0"
  }
}
